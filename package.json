{
  "name": "messenger",
  "version": "1.0.0",
  "description": "Free to use online real time messenger build on Vite",
  "main": "entry-server.ts",
  "engines": {
    "npm": ">=9.6.4",
    "node": "<=18.15.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "tsc && vite build && vite preview",
    "build": "tsc && vite build",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.js",
    "test": "mocha --require ignore-styles",
    "prepare": "husky install",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && npx stylelint \"**/*.sass\""
  },
  "keywords": [
    "messeger",
    "real",
    "time"
  ],
  "author": "Vitalii Iakunin",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.1",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.14",
    "bem-ts": "^0.13.5",
    "chai": "^4.3.8",
    "eslint": "^8.44.0",
    "eslint-plugin-import": "^2.27.5",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "ignore-styles": "^5.0.1",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "mocha": "^10.2.0",
    "postcss": "^8.4.24",
    "postcss-css-variables": "^0.19.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vite-plugin-checker": "^0.6.1",
    "xmlhttprequest": "^1.8.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "postcss-nesting": "^12.0.1",
    "uuid": "^9.0.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --fix"
    ],
    "*.(css)": [
      "npx stylelint --fix"
    ]
  }
}

{
  "name": "messenger",
  "version": "1.0.0",
  "description": "Free to use online real time messenger build on Vite",
  "main": "entry-server.ts",
  "type": "module",
  "engines": {
    "npm": ">=9.6.4",
    "node": "<=18.15.0"
  },
  "scripts": {
    "dev": "ts-node --esm entry-server.ts",
    "start": "tsc && vite build && vite preview",
    "build": "tsc && vite build",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && npx stylelint \"**/*.scss\""
  },
  "keywords": [
    "messeger",
    "real",
    "time"
  ],
  "author": "Vitalii Iakunin",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "postcss-nesting": "^11.2.2",
    "sass": "^1.62.1",
    "stylelint": "^15.9.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.0.2"
  },
  "dependencies": {
    "@types/lodash": "^4.14.195",
    "@types/uuid": "^9.0.2",
    "bem-classnames": "^1.0.7",
    "bem-ts": "^0.13.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "sass-lint": "^1.13.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-scss": "^5.0.1",
    "uuid": "^9.0.0"
  }
}
